<div class="container">
	<h1>Party view</h1>
	<div class="row">
		<div class="col-md-8">
			<div class="party-status">
				<div class="panel panel-default">
				  <div class="panel-heading">
				  	<h3 style="display: inline;"><%= @party.name %></h3>
				  	<a href="/" class="pull-right"><span class="badge">Home</span></a>
				  	<a href="/parties/<%= @party.id %>/edit" class="pull-right"><span class="badge">Edit</span></a>

				  </div>
				  <div class="panel-body">
				    <ul>				
						<li><label>Address: </label><%= @party.adress %></li>
						<li><label>Location: </label><%= @party.coordinates %></li>
						<li><label>Date: </label><%= @party.date_time %></li>
						<li>
							<label>Attendees: </label>
							<ul>
								<%@party.attendees.each do |attendee|%>
									<li><label>Name: </label><%=attendee.name%><label> Email:</label> <%=attendee.email%></li>
									<a href ="/parties/attendee/<%= attendee.id %>/remove"><span class="badge">Remove</span></a>
								<% end %>
							</ul>
						</li>
					</ul>
				  </div>
				</div>		
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<form action="/parties/<%=@party.id%>/attendee" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="name">Name</label>
					<input  type="text" id="name" name="name"  class="form-control">
				</div>
				<div class="form-group">
					<label for="email">Email</label>
					<input  type="email" id="email" name="email" class="form-control">
				</div>
				
				<div class="text-center"><button class="btn btn-default">Add attendee</button></div>				
			</form>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>
