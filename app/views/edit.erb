<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center"><h1>Edit Event</h1></div>	
	</div>
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<form action="/parties/<%= @party.id %>/update" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="name">Name</label>
					<input  type="text" id="name" name="name"  class="form-control" value="<%= @party.name %>">
				</div>
				<div class="form-group">
					<label for="date">Date</label>
					<input  type="datetime-local" id="date" name="date" class="form-control" value="<%= @party.date_time.strftime('%FT%R') %>">
				</div>
				<div class="form-group">
				 	<label for="location">Location</label>
					<input  type="text" id="location" name="address"  class="form-control" value="<%= @party.adress %>">
				</div>
				<div class="form-group form-inline text-center">
				 	<label for="latitude">Latitude</label>
					<input  type="text" id="latitude" name="latitude"  class="form-control" value="<%= @latitude %>">
					<label for="longitude" style="margin-left: 10px;">Longitude</label>
					<input  type="text" id="longitude" name="longitude"  class="form-control" value="<%= @longitude %>">
					<h1></h1>
					<a href="http://www.mapcoordinates.net/pt" target="_blank">Find Latitude and Longitude Here</a>
				</div>
				<div class="text-center"><button class="btn btn-default">Edit event</button></div>				
			</form>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>